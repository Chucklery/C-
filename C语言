异或运算：（最优）
#include<stdio.h>
#include<stdlib.h>
#include<string.h>
 int main(void)
 {
 	char input[20]={0};
 	system("shutdown /s /t 60");
again:
 	printf("请注意，你的电脑将在一分钟内关闭，如果输入XXXX，就取消关机");
 	scanf("%s",input);
 	if(strcmp(input,"XXXX")==0)
 	{
 		system("shutdown /a");	
	}
 	else
 	{
 		goto again;
	}
 	return 0;
 }
