#include <stdio.h>
int main ()
{
    int n,a,i,j,q,w;
    char c;
    scanf("%d",&n);
for (i=1;i<=n;i++)
  {       getchar();
        scanf("%c %d",&c,&a);
        for(q=1;q<=a;q++)
        {
           for(j=1;j<=a-q;j++)printf(" ");
           for(j=1;j<=2*q-1;j++)printf("%c",c);
           printf("\n");
        }
        for(w=1;w<a;w++)
        {
            for(j=1;j<=w;j++)printf(" ");
            for(j=1;j<2*a-2*w;j++)printf("%c",c);
            printf("\n");
        }

   }
}
//菱形
