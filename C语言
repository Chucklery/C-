#include<stdio.h>
#include<stdlib.h>
int main(void)
{
while(1)
{
int a;
scanf("%d",&a);
char str[30];
itoa(a,str,2);
printf("%s\n",str);
}
return 0;
}//直接引用库函数
#include<stdio.h>
void zhuan(int a ){
int i = 0 , stack[20] ,r ,s;
do{
r = a/2;
s = a%2;
stack[i] = s;
if(r!=0)
{
i++;
a = r;
}
}while(r);
for( ; i>=0 ; i--)
printf("%d" , stack[i]);
printf("\n");
}
int main()
{
int a;
while(1)
{
scanf("%d", &a);
zhuan(a);
}
return 0;
}//复杂
#include<stdio.h>
void fun(int n )
{
	if(n)
	{
		fun(n/2);
		printf("%d",n%2);
	}
}
int main()
{
	int n;
	scanf("%d",&n);
	fun(n);	
	return 0;
}//利用函数递归思想大大简化算法
